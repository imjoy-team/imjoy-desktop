{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": ["./src/*"],
      "components/*": ["./src/components/*"]
    },
    "types": [
      "@owd-client/types",
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
